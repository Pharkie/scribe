{
    "name": "scribe-css-build",
    "version": "1.0.0",
    "description": "Build tools for Scribe ESP32-C3 Thermal Printer CSS",
    "private": true,
    "scripts": {
        "build-css": "npx @tailwindcss/cli --input ./src/css/index.css --output ./data/css/index.min.css --minify && npx @tailwindcss/cli --input ./src/css/diagnostics.css --output ./data/css/diagnostics.min.css --minify && npx @tailwindcss/cli --input ./src/css/settings.css --output ./data/css/settings.min.css --minify && npx @tailwindcss/cli --input ./src/css/404.css --output ./data/css/404.min.css --minify",
        "build-css-prod": "npx @tailwindcss/cli --input ./src/css/index.css --output ./data/css/index.min.css --minify && npx @tailwindcss/cli --input ./src/css/diagnostics.css --output ./data/css/diagnostics.min.css --minify && npx @tailwindcss/cli --input ./src/css/settings.css --output ./data/css/settings.min.css --minify && npx @tailwindcss/cli --input ./src/css/404.css --output ./data/css/404.min.css --minify",
        "build-css-dev": "npx @tailwindcss/cli --input ./src/css/index.css --output ./data/css/index.css --watch & npx @tailwindcss/cli --input ./src/css/diagnostics.css --output ./data/css/diagnostics.css --watch & npx @tailwindcss/cli --input ./src/css/settings.css --output ./data/css/settings.css --watch & npx @tailwindcss/cli --input ./src/css/404.css --output ./data/css/404.css --watch",
        "watch-css": "npx @tailwindcss/cli --input ./src/css/index.css --output ./data/css/index.css --watch & npx @tailwindcss/cli --input ./src/css/diagnostics.css --output ./data/css/diagnostics.css --watch & npx @tailwindcss/cli --input ./src/css/settings.css --output ./data/css/settings.css --watch & npx @tailwindcss/cli --input ./src/css/404.css --output ./data/css/404.css --watch",
        "build-vendor": "cp node_modules/alpinejs/dist/cdn.min.js data/js/vendor-temp.js && cat node_modules/@simonwep/pickr/dist/pickr.min.js >> data/js/vendor-temp.js && npx terser src/js/config.js src/js/shared.js -c -m >> data/js/vendor-temp.js && cp data/js/vendor-temp.js data/js/vendor.min.js && rm data/js/vendor-temp.js",
        "build-page-index": "npx terser src/js/index-alpine-store.js --compress --mangle --output data/js/page-index.min.js",
        "build-page-settings": "npx terser src/js/settings-alpine-store.js src/js/settings-api.js --compress --mangle --output data/js/page-settings.min.js",
        "build-page-diagnostics": "npx terser src/js/diagnostics-alpine-store.js --compress --mangle --output data/js/page-diagnostics.min.js",
        "build-page-404": "npx terser src/js/404-alpine-store.js --compress --mangle --output data/js/page-404.min.js",
        "build-js": "npm run build-vendor && npm run build-page-index && npm run build-page-settings && npm run build-page-diagnostics && npm run build-page-404",
        "build-js-prod": "npm run build-vendor && npm run build-page-index && npm run build-page-settings && npm run build-page-diagnostics && npm run build-page-404",
        "build": "npm run build-css && npm run build-js",
        "build-prod": "npm run build-css-prod && npm run build-js-prod"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.12",
        "@simonwep/pickr": "^1.9.1",
        "alpinejs": "^3.14.9",
        "tailwindcss": "^4.1.12"
    },
    "devDependencies": {
        "terser": "^5.43.1"
    }
}